@model List<ECinema.Domain.Domain_models.Ticket>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Tickets" asp-action="Create"> Add new Movie</a>
    </div>

    @for (int i = 0; i < Model.Count(); i++)
    {

        var item = Model[i];
        if (i % 3 == 0)
        {
            @:<div class="row">
            }
            <div class="card" style="width: 18rem;margin-right:15px">
                <img class="card-img-top" src="@item.Poster" style="height:80%;max-width:90%" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.MovieTitle</h5>
                    <p class="card-text">@item.Price</p>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a href="/Tickets/AddToCart?ticketId=@item.Id&cartId=1">Add to cart</a>
                </div>
            </div>
            if (i % 3 == 2)
            {
            @:</div>
        }
    }
